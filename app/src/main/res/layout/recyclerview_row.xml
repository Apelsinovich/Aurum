<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:scrollbars="vertical"
    android:background="#88CECECE"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        style="@style/CardView.Light"
        app:cardCornerRadius="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEventCaption"
                android:text="14 июля"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_gravity="end"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#88888888"
                android:layout_marginTop="15dp"
                />

            <ImageView
                android:id="@+id/ivEventImage"
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ev2" />

            <TextView
                android:id="@+id/tvEventInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:id="@+id/expandEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/tvEventdetailedInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="18dp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#88888888"
                android:layout_marginTop="15dp"
                />
            <Button
                android:id="@+id/expandBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="EXPAND"
                android:textColor="#6200EA"
                android:background="@drawable/ripple_effect"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>